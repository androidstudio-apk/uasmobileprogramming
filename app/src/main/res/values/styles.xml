<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#606060</item>
    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">#FFA000</item>
    </style>

    <style name="EqualButton" parent="CalculatorButton">
        <item name="android:backgroundTint">#388E3C</item>
    </style>

    <style name="ClearButton" parent="CalculatorButton">
        <item name="android:backgroundTint">#D32F2F</item>
    </style>
</resources>
